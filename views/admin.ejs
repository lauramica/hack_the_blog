<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin View</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include("partials/navbar")%>
    <div class="container mt-5">
      <div class="d-flex justify-content-between">
        <h2 class="fw-bolder">Articles</h2>
        <a href="http://localhost:3000/panel/articles/create" class="btn btn-success mb-4">Nuevo</a>
      </div>

      <table class="table table-striped border">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
            <th scope="col">Image</th>
            <th scope="col">Created at</th>
            <th scope="col">Author</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% for (const article of articles) { %>
          <tr>
            <th><%= article.id %></th>
            <td><%= article.title %></td>
            <td><%= article.content %></td>
            <td><%= article.image %></td>
            <td><%= article.createdAt %></td>
            <td><%= article.userId %></td>
            <td class="text-center">
              <a href="/articles/editar/<%=article.id%>" class="btn btn-primary mb-2">Editar</a>
              <a href="/articles/eliminar/<%=article.id%>" class="btn btn-danger">Eliminar</a>
            </td>
          </tr>
          <%}%>
        </tbody>
      </table>
    </div>
    <%- include("partials/footer")%>
  </body>
</html>
