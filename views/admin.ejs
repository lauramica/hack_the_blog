<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin | Hack the blog</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <link rel="stylesheet" href="http://localhost:3000/css/styles.css" />
  </head>
  <body>
    <%- include("partials/navbar")%>
    <div class="container mt-5">
      <div class="d-flex justify-content-between">
        <h2 class="bold">Articles</h2>
        <a href="/articles/create" class="btn btn-success mb-4">Create new article</a>
      </div>

      <table class="table table-striped border">
        <thead>
          <tr class="d-flex">
            <th class="col-1">ID</th>
            <th class="col-2">Title</th>
            <th class="col-3">Content</th>
            <th class="col-2">Image</th>
            <th class="col-2">Created at</th>
            <th class="col-1">Author</th>
            <th class="col-1">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% for (const article of articles) { %>
          <tr class="d-flex">
            <th class="col-1"><%= article.id %></th>
            <td class="col-2"><%= article.title %></td>
            <td class="col-3"><%= article.content %></td>
            <td class="col-2"><%= article.image %></td>
            <td class="col-2"><%= moment(article.createdAt).format("Do MMMM, YYYY") %></td>
            <td class="col-1"><%= article.user.firstname%> <%= article.user.lastname%></td>
            <td class="text-center col-1 gap-2">
              <div class="d-grid gap-2 col-6 mx-auto divButtonsAdmin">
                <a
                  href="/articles/edit/<%=article.id%>"
                  class="btn btn-primary table-button editButton"
                  >Editar</a
                >
                <a
                  href="/articles/delete/<%=article.id%>"
                  class="btn btn-danger table-button deleteButton"
                  >Eliminar</a
                >
              </div>
            </td>
          </tr>
          <%}%>
        </tbody>
      </table>
    </div>

    <%- include("partials/footerRelative")%>
  </body>
</html>
