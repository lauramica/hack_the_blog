<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin | Hack the blog</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
    />
    <link rel="stylesheet" href="http://localhost:3000/css/styles.css" />
  </head>
  <body>
    <%- include("partials/navbar")%>
    <div class="above-footer">
      <div class="container mt-5">
        <div class="d-flex justify-content-between">
          <h2 class="bold">Users</h2>
          <a href="/articles/create" class="btn btn-success mb-4">Solicitudes de cambio de rol?</a>
        </div>
        <table class="table table-striped border">
          <thead>
            <tr class="d-flex">
              <th class="col-1">ID</th>
              <th class="col-2">Firstname</th>
              <th class="col-3">Lastname</th>
              <th class="col-2">Email</th>
              <th class="col-2">Role</th>
              <th class="col-1">Register at</th>
              <th class="col-1">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% for (const user of users) { %>
            <tr class="d-flex">
              <th class="col-1"><%= user.id %></th>
              <td class="col-2"><%= user.firstname %></td>
              <td class="col-3"><%= user.lastname %></td>
              <td class="col-2"><%= user.email %></td>
              <td class="col-2">
                <select class="form-select" name="role" id="role">
                  <option selected><%= user.role %></option>
                  <option value="<%user.role.lector%>">Lector</option>
                  <option value="<%user.role.blogger%>">Blogger</option>
                  <option value="<%user.role.admin%>">Admin</option>
                </select>
              </td>
              <td class="col-1"><%= moment(user.createdAt).format("Do MMMM, YYYY") %></td>
              <td class="text-center col-1 gap-2">
                <div class="d-grid gap-2 col-6 mx-auto divButtonsAdmin">
                  <a href="/users/edit/<%=user.id%>" class="btn btn-primary table-button editButton"
                    >Edit</a
                  >
                  <a
                    href="/users/delete/<%=user.id%>"
                    class="btn btn-danger table-button deleteButton"
                    >Delete</a
                  >
                  <a href="" class="btn btn-warning table-button deleteButton">Show articles</a>
                </div>
              </td>
            </tr>
            <%}%>
          </tbody>
        </table>
      </div>
    </div>

    <%- include("partials/footer")%>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
